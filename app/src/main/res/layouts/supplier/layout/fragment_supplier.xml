<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="供需中心"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/textsize_18sp" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_my_visit_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_bg_visiting_card_bg"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:padding="@dimen/dp_15"
            android:text="供应广场"
            android:textColor="@color/selector_visiting_card_color"
            android:textSize="@dimen/textsize_15sp" />

        <RadioButton
            android:id="@+id/rb_visit_card_squary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_bg_visiting_card_bg"
            android:button="@null"
            android:checked="false"
            android:gravity="center"
            android:padding="@dimen/dp_15"
            android:text="全国招标"
            android:textColor="@color/selector_visiting_card_color"
            android:textSize="@dimen/textsize_15sp" />

    </RadioGroup>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginBottom="100dp"
            android:background="@drawable/btn_add_message_model"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_15"
            android:paddingTop="@dimen/dp_5"
            android:paddingRight="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_5">

            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@mipmap/icon_add"
                android:tint="@color/color_white" />

            <TextView
                android:id="@+id/tv_wangto_supply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="我能供应"
                android:textColor="@color/color_white"
                android:textSize="@dimen/textsize_13sp" />
        </LinearLayout>

    </RelativeLayout>


</LinearLayout>