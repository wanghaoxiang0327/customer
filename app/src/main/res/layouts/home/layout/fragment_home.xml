<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_home_top"
                android:orientation="vertical">

                <com.youth.banner.Banner
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="80dp"
                    android:layout_marginRight="@dimen/dp_15"
                    app:image_scale_type="matrix" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_15"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_hot_shop_push"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_hot_shop_push"
                        android:gravity="center"
                        android:padding="@dimen/dp_15">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="@dimen/dp_20"
                            android:src="@mipmap/icon_hot_shop" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:gravity="center"
                            android:text="红店强推"
                            android:textColor="@color/color_white"
                            android:textSize="@dimen/textsize_15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_help_center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_weight="1"
                        android:background="@drawable/bg_help_center"
                        android:gravity="center"
                        android:padding="@dimen/dp_15">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="@dimen/dp_20"
                            android:src="@mipmap/icon_question" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:gravity="center"
                            android:text="帮助中心"
                            android:textColor="@color/color_white"
                            android:textSize="@dimen/textsize_15sp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:background="@drawable/bg_key_word_search"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp_15">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="选择地区"
                            android:textColor="@color/color_4e96f3"
                            android:textSize="@dimen/textsize_13sp" />

                        <TextView
                            android:id="@+id/tv_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:text="北京-北京"
                            android:textColor="@color/color_4e96f3"
                            android:textSize="@dimen/textsize_13sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/color_d1d1d1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp_15">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="关键词"
                            android:textColor="@color/color_4e96f3"
                            android:textSize="@dimen/textsize_13sp" />

                        <EditText
                            android:id="@+id/et_keyword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:background="@null"
                            android:hint="请输入关键字。例：美食、超市"
                            android:textColor="@color/color_333333"
                            android:textColorHint="@color/color_999999"
                            android:textSize="@dimen/textsize_13sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_btn_search"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_margin="@dimen/dp_15"
                        android:background="@drawable/btn_search_bg"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="@dimen/dp_20"
                            android:src="@mipmap/icon_look" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:text="搜索"
                            android:textColor="@color/color_white"
                            android:textSize="@dimen/textsize_13sp" />


                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_15"
                android:paddingTop="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15">


                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/icon_data_source" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_weight="1"
                    android:text="采集源"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/textsize_15sp" />

                <ImageView
                    android:id="@+id/iv_source"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/icon_class" />
            </LinearLayout>

            <com.pomelo.searchcustomer.weight.NoScrollRecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15" />
        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:id="@+id/ll_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_15"
        android:background="@drawable/bg_search"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dp_5">

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@mipmap/icon_search" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="超多分类搜索客户"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/textsize_13sp" />
    </LinearLayout>
</RelativeLayout>