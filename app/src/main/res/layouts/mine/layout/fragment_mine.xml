<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="230dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_mine_top"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_40"
                    android:paddingRight="@dimen/dp_15"
                    android:paddingBottom="@dimen/dp_40">

                    <ImageView
                        android:id="@+id/iv_head"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/icon_head" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_name"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="暂无"
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/textsize_15sp" />

                            <TextView
                                android:id="@+id/tv_customer_pay"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/btn_customer_pay"
                                android:paddingLeft="@dimen/dp_10"
                                android:paddingTop="@dimen/dp_5"
                                android:paddingRight="@dimen/dp_10"
                                android:paddingBottom="@dimen/dp_5"
                                android:text="续费会员"
                                android:textColor="@color/color_4e96f3"
                                android:textSize="@dimen/textsize_13sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_15"
                                android:text="升级享更多权限"
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/textsize_10sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="绑定手机号："
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/textsize_13sp" />

                            <TextView
                                android:id="@+id/tv_phone_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="-- --"
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/textsize_13sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="剩余短信数："
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/textsize_10sp" />

                            <TextView
                                android:id="@+id/tv_messgae_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="0"
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/textsize_13sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_25"
                                android:text="到期时间："
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/textsize_10sp" />

                            <TextView
                                android:id="@+id/tv_data"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/textsize_13sp"
                                android:text="-- --" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_25"
                    android:background="@drawable/btn_customer_pay"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_10">

                    <LinearLayout
                        android:id="@+id/ll_collection_data"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_data_collection_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="0"
                            android:textColor="@color/color_4e96f3"
                            android:textSize="@dimen/textsize_13sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:text="采集数据"
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/textsize_10sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_my_supply"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_my_supply_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="0"
                            android:textColor="@color/color_4e96f3"
                            android:textSize="@dimen/textsize_13sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:text="我的供应"
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/textsize_10sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_my_target"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_my_index_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="0"
                            android:textColor="@color/color_4e96f3"
                            android:textSize="@dimen/textsize_13sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:text="我的指标"
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/textsize_10sp" />

                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_my_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_customer_pay"
                android:drawableRight="@mipmap/icon_arrow_right"
                android:paddingLeft="@dimen/dp_15"
                android:paddingTop="@dimen/dp_5"
                android:paddingRight="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_5"
                android:text="我的消息"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/textsize_14sp" />

            <TextView
                android:id="@+id/tv_messgae_apply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/btn_customer_pay"
                android:drawableRight="@mipmap/icon_arrow_right"
                android:paddingLeft="@dimen/dp_15"
                android:paddingTop="@dimen/dp_5"
                android:paddingRight="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_5"
                android:text="短信审核"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/textsize_14sp" />

            <TextView
                android:id="@+id/tv_messgae_recharge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/btn_customer_pay"
                android:drawableRight="@mipmap/icon_arrow_right"
                android:paddingLeft="@dimen/dp_15"
                android:paddingTop="@dimen/dp_5"
                android:paddingRight="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_5"
                android:text="短信充值"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/textsize_14sp" />

            <TextView
                android:id="@+id/tv_about_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/btn_customer_pay"
                android:drawableRight="@mipmap/icon_arrow_right"
                android:paddingLeft="@dimen/dp_15"
                android:paddingTop="@dimen/dp_5"
                android:paddingRight="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_5"
                android:text="联系我们"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/textsize_14sp" />

            <TextView
                android:id="@+id/tv_feed_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/btn_customer_pay"
                android:drawableRight="@mipmap/icon_arrow_right"
                android:paddingLeft="@dimen/dp_15"
                android:paddingTop="@dimen/dp_5"
                android:paddingRight="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_5"
                android:text="意见反馈"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/textsize_14sp" />

            <TextView
                android:id="@+id/tv_disclaimer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/btn_customer_pay"
                android:drawableRight="@mipmap/icon_arrow_right"
                android:paddingLeft="@dimen/dp_15"
                android:paddingTop="@dimen/dp_5"
                android:paddingRight="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_5"
                android:text="免责声明"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/textsize_14sp" />

            <TextView
                android:id="@+id/tv_modify_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/btn_customer_pay"
                android:drawableRight="@mipmap/icon_arrow_right"
                android:paddingLeft="@dimen/dp_15"
                android:paddingTop="@dimen/dp_5"
                android:paddingRight="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_5"
                android:text="修改密码"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/textsize_14sp" />

            <TextView
                android:id="@+id/tv_complaints"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_48"
                android:background="@drawable/btn_customer_pay"
                android:drawableRight="@mipmap/icon_arrow_right"
                android:padding="@dimen/dp_10"
                android:paddingRight="@dimen/dp_15"
                android:text="在线客服与投诉"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/textsize_15sp"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>